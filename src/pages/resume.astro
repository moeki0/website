---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getEntry } from 'astro:content';

// Get the resume content from the pages collection
const resume = await getEntry('pages', 'resume');
const { Content } = await resume.render();
---

<BaseLayout title="Resume - Moeki Kawakami">
  <main class="p-8 max-w-[800px] mx-auto">
    <div class="prose">
      <Content />
    </div>

    <footer class="py-8 text-center">
      <a href="/" class="underline hover:text-gray-600">← ホームに戻る</a>
    </footer>
  </main>
</BaseLayout>
