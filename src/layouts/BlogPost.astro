---
import BaseLayout from './BaseLayout.astro';

export interface Props {
  title: string;
  pubDate: Date;
  description?: string;
  author?: string;
}

const { title, pubDate, description } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <article class="post p-8 max-w-[700px] mx-auto">
    <header class="post-header mb-8">
      <h1 class="font-bold text-3xl mb-2">{title}</h1>
      <p class="text-gray-600 text-xs">
        <time datetime={pubDate.toISOString()}>
          {pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
        </time>
      </p>
    </header>

    <div class="post-content prose prose-lg max-w-none">
      <slot />
    </div>

    <footer class="post-footer mt-8 pt-8 border-t">
      <p><a href="/" class="underline hover:text-gray-600">‚Üê Back to home</a></p>
    </footer>
  </article>
</BaseLayout>
