---
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
}

const { title = 'Moeki Kawakami', description = 'Personal website and blog of Moeki Kawakami - Hacker, servant of 4 cats, caffeine lover, and believer in science.' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/icon.JPG" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="text-gray-800 animate-fade">
    <div class="container">
      <slot />
    </div>
  </body>
</html>

<style>
  .container {
    min-height: 100vh;
  }
</style>
